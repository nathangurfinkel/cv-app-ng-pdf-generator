{
  "family": "cv-pdf-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::303774815769:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::303774815769:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "cv-pdf-service",
      "image": "303774815769.dkr.ecr.eu-north-1.amazonaws.com/cv-pdf-service:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cv-pdf-service",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "FRONTEND_URL",
          "value": "https://your-amplify-app.com"
        }
      ]
    }
  ]
}
